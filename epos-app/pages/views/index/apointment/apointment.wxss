/* pages/views/index/apointment/apointment.wxss */

.a-list .a-title {
  height: 80rpx;
  line-height: 80rpx;
}

.a-list .a-con {
  border-top: 1rpx solid #eee;
}

.a-list .a-address {
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.a-list .a-address image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.a-list .a-address .address {
  flex: 1;
}

.a-list .a-address .link-address {
  width: 120rpx;
  text-align: right;
}

.a-list .remark {
  height: 150rpx;
  padding: 0 10rpx;
}

.apointment-btn {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.apointment-btn button {
  width: 100%;
  background-color: #74e4f3;
  border-radius: 0;
}

.apointment-btn button::after {
  border: none;
}

.apointment-btn button.button-hover {
  background-color: #74e4f3;
  opacity: 0.7;
  color: #fff;
}

.time-wrap {
  display: flex;
  height: 100%;
  width: 100%;
}

.time-wrap .day {
  width: 200rpx;
  height: 100%;
  background-color: #eee;
  text-align: center;
  line-height: 120rpx;
  overflow-y: scroll;
}

.time-wrap .day .day-item {
  border-bottom: 1rpx solid #d9d9d9;
}

.time-wrap .day .day-item.active {
  background-color: #fff;
}

.time-wrap .day .time-item {
  width: 100%;
  height: 90px;
  line-height: 90px;
  border-bottom: 1rpx solid #d4d4d4;
}

.time-wrap .date {
  flex: 1;
  height: 100%;
  overflow: scroll;
}

.time-wrap .date .time-item {
  line-height: 90rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.time-wrap .date .time-item:active, .time-wrap .date .time-item.no-click {
  background-color: #f9f9f9;
}
