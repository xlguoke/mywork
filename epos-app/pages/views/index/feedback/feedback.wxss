/* pages/views/index/feedback/feedback.wxss */

.f-list .f-title {
  height: 60rpx;
}

.f-list .f-con {
  border-top: 1rpx solid #f5f5f5;
}

.f-list .f-con .f-form {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.f-list .f-con .f-form .label {
  width: 120rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.f-list .f-con .f-form .value {
  flex: 1;
  height: 100%;
}

.type-item {
  width: 210rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.type-item:nth-child(3n) {
  margin-right: 0;
}

.type-item>image {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  display: none;
}

.type-item.active {
  border-color: #74e4f3;
}

.type-item.active image {
  display: block;
}

.textarea {
  height: 150rpx;
  padding: 10rpx 0;
}

.feedback-btn button {
  border-radius: 14rpx;
}
