/* pages/views/recharge/recharge.wxss */
.rlist .r-title {
    height: 80rpx;
    line-height: 80rpx;
}

.rlist .r-title .member-card {
    width: 130rpx;
}

.rlist .r-title .member-item,
.rlist .r-title .member-nothing {
    width: calc(100% - 130rpx)
}

.rlist .r-title .member-nothing {
    color: #aaa;
}

.rlist .r-con {
    border-top: 1rpx solid #eee;
}

.money-item {
    width: 210rpx;
    height: 130rpx;
    border: 3rpx solid #74e4f3;
    border-radius: 16rpx;
    margin-right: 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.money-item:nth-child(3n) {
    margin-right: 0;
}

.money-item>view {
    font-size: 36rpx;
}

.pay-type {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}

.pay-type:last-child {
    border-bottom: none;
}

.pay-type image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    margin-top: 15rpx;
}

.payment-btn{
    width:100%;
    height:90rpx;
    line-height:90rpx;
    position:fixed;
    left:0;
    bottom:0;
    padding-left:30rpx;
    box-sizing:border-box;
}

.payment-btn .payment{
    width:200rpx;
    height:100%;
    text-align: center;
}
.payment-btn .payment:active{
    opacity:.7;
}