/* pages/views/my/my.wxss */
.userinfo {
    height: 240rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.userinfo .user-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 100%;
    border: 2rpx solid #fff;
    overflow: hidden;
    background-color: #eee;
    margin-left: 30rpx;
}

.userinfo .user-img image {
    width: 100%;
    height: 100%;
}

.userinfo .user-bar {
    width: 380rpx;
}

.userinfo .user-bar .tel {
    color: #fff;
    margin-bottom: 10rpx;
}

.userinfo .user-bar image {
    width: 100%;
}

.userinfo .user-serve {
    width: 120rpx;
    height: 160rpx;
    margin-top: 60rpx;
}

.userinfo .user-serve .kefu {
    width: 50rpx;
    height: 50rpx;
    margin-left: 50rpx;
}

.userinfo .user-serve .recharge {
    width: 120rpx;
    height: 45rpx;
    line-height: 45rpx;
    text-align: center;
    background-color: rgba(255, 255, 255, .9);
    border-top-left-radius: 20rpx;
    border-bottom-left-radius: 20rpx;
    margin-top: 30rpx;
}

.userinfo .user-serve .recharge image {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.userinfo .user-serve .recharge text {
    font-size: 26rpx;
    margin-left: 10rpx;
}

.wallet-wrap {
    width: 100%;
    height: 160rpx;

}

.wallet-wrap .my-wallet {
    width: 160rpx;
    height: 100%;
    box-shadow: inset -1rpx 2rpx 6rpx 0 #eee;
    text-align: center;
}

.wallet-wrap .my-wallet image {
    width: 70rpx;
    height: 70rpx;
    margin-top: 20rpx;
}

.wallet-wrap .wallet-info {
    width: calc(100% - 160rpx);
    display: flex;
}

.wallet-wrap .wallet-info>view {
    flex: 1;
    text-align: center;
    line-height: 50rpx;
    padding-top: 30rpx;
}

.menu-item {
    height: 80rpx;
    line-height: 80rpx;
}

.menu-item .icon {
    width: 30rpx;
    height: 30rpx;
    margin-right:10rpx;
    margin-top:28rpx;
}

.menu-item .arrow-r {
    width: 10rpx;
    height: 10rpx;
    border-right: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    transform: rotate(45deg);
    margin-top:34rpx;
}