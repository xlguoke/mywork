/* pages/views/my/wallet/wallet.wxss */

.balance {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.balance image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.balance .text {
  font-size: 34rpx;
}

.my-card .swiper {
  height: 350rpx;
}

.my-card .item {
  height: 100%;
  border: 5rpx solid #696f7a;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.my-card .item .card-user {
  height: 120rpx;
  color: #fff;
  background-color: #696f7a;
  padding-left: 20rpx;
}

.my-card .item .card-user .name {
  line-height: 50rpx;
  padding-top: 12rpx;
  font-size: 32rpx;
}

.my-card .item .card-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding:0 20rpx;
}

.my-card .bar-code{
  height:110rpx;
  background:#eee;
  width:auto;
  margin:0 auto;
}